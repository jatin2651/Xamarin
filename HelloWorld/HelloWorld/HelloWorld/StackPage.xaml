        <!-- Exercise 2 of layout -->
        <StackLayout>
            <StackLayout Padding="10">
                <Label Text="nyc_photographer" FontAttributes="Bold"/>
            </StackLayout>

            
            <Image Source="http://lorempixel.com/1920/1080/nature/3/"/>
            

            <StackLayout Padding="10,0" Spacing="20" Orientation="Horizontal">
                <Button Text="Like"/>
                <Button Text="Comment"/>
                <Button Text="Share"/>
            </StackLayout>

            <StackLayout Padding="10,0">
                <BoxView Color="#f0f0f0" HeightRequest="1"/>
                <Label Text="700 likes" FontAttributes="Bold"/>
                <Label Text="This is a shot yesterday in Skanor, Sweden, when driving home, from a couple of days of work in Denmark"/>

            </StackLayout>
        </StackLayout>
            


    </ContentPage.Content>
</ContentPage>